{% extends "base.html.twig" %}

{% block body %}
    <div class="flex-center position-ref full-height">
        {% include 'navbar.html.twig' %}

        <div class="content">
            <div class="title m-b-md">
                Article
            </div>

            <a href="{{ path('app_article_tri', { "option" : "hitcount" }) }}"></a>

            {% for article in articles %}

                <h3><a href="{{ path("app_article_articleid", {'id':article.id}) }}">Articles {{ article.id }}</a></h3>
                {{ article.title }}
                <br>
                {{ article.summary }}

                <br>
                {{ article.content }}
                <br>
                {{ article.hitcount }}
                <br>
                {% if app.user != null %}
                {% if app.user.admin == true %}
                <a href="{{ path('app_article_edit', {'id' : article.id}) }}"> EDIT</a>
                {% endif %}
                {% endif %}
            <br>
                <br>

            {% endfor %}


            <div class="links">
                <a href="http://www.iut-lens.univ-artois.fr">Marathon du Web</a>
            </div>
        </div>
    </div>
{% endblock %}
