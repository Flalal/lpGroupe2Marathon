{% extends "base.html.twig" %}

{% block body %}

    <!--Slide-->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">

            <!-- Slide One - Set the background image for this slide in the line below -->
            <div class="carousel-item active" style="background-image: url('./build/img/slidenoel.jpg')">
                <div class="carousel-caption d-none d-md-block">
                    <h1 class="titre">Découvrez </br> nos recettes de noël</h1>
                    <a href="#" target="_blank"> <input type="button" value="Les Recettes" class="bouton"></a>
                </div>
            </div>


            {% for article in articles %}
            <!-- Slide Two - Set the background image for this slide in the line below -->
            <div class="carousel-item" style="background-image: url('{{ article.media.path }}')">
                <div class="carousel-caption d-none d-md-block">
                    <h3>{{ article.title }}</h3>
                    <p>{{ article.content| truncate(40, false, '...') }}</p>
                    <a href="{{ path("app_article_articleid", {"id" : article.id}) }}" target="_blank"> <input type="button" value="En savoir plus !" class="bouton"></a>
                </div>
            </div>

            {% endfor %}

        </div>

        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>

        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


    <!-- suite accuel -->

    <div>
        <div class="univers">

            <div>
                <h2 class="titre-univers"> Nos Univers </h2>
            </div>

            <div>
                <img src="./build/img/icondessert2.png">
            </div>

            <div>
                <img src="./build/img/iconboisson2.png">
            </div>

            <div>
                <img src="./build/img/icongluten2.png">
            </div>

            <div>
                <img src="./build/img/iconplat2.png">
            </div>

            <div>
                <img src="./build/img/iconvegan2.png">
            </div>
        </div>
    </div>

    <!-- Portfolio Section -->
    </br></br>

    <div class="row">

        {% for recette in recettes %}

        <div class="col-lg-4 col-sm-6 portfolio-item">
            <div class="card h-100">
                <a href="#"><img class="card-img-top" src="{{ recette.media.path }}" alt=""></a>
                <div class="card-body">
                    <h4 class="card-title">
                        <a href="{{  path("app_recette_recetteid", {"id" :recette.id}) }}"> {{ recette.name }}</a>
                    </h4>
                    <p class="card-text">{{ recette.steps| truncate(100, false, '...') }}</p>
                </div>
            </div>
        </div>
        {% endfor %}

    </div>


{% endblock %}
